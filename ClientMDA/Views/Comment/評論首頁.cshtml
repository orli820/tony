                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--#endregion 評論輪播 End-->

    <hr />
    <div class="section-title">
        <h5>最新評論</h5>
    </div>

    <!-- #region 最新評論 -->
    <div class="card-columns">

        @await Component.InvokeAsync("最新評論", new { datas = Model })

    </div>
    <!-- #endregion 最新評論 -->

    <hr />
    <div class="section-title">
        <h5>關注評論</h5>
    </div>

    <!-- #region 關注評論 -->
    <div class="card-columns">

        @await Component.InvokeAsync("關注評論", new { datas = Model })

