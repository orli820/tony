@{
    ViewData["Title"] = "新片排行";
}
<style>
    #title, #title h1 {
        color: navy;
        
    }
    #nametitle {
        margin:40%;
    }
    #box {
        background-color: white;
    }
    #tablediv{
        margin:3%;
    }
</style>

<div id="box">
    <div id="title">
        <h1 id="nametitle">@ViewData["Title"]</h1>
        <div id="ondate">日期什麼時候到什麼時候</div>
    </div>
    <div id="tablediv">
        <table class="table table-striped" id="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@@mdo</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>@@fat</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>@@twitter</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>