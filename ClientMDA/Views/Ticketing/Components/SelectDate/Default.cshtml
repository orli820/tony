                    @{
                        DateTime date = today.AddDays(1.0);

                        for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="swiper-slide text-center border border-2 pr-3 date justify-content-center DateTimePicker" data="@Model[i].Date">
                                <br />
                                <i class="d-block pt-1 pl-1"> @Model[i].ToString("dddd")</i>
                                <i class="d-block"> @Model[i].ToString("dd" + " 號")</i>
                                <i class="d-block pb-1"> @Model[i].ToString("MM" + " 月")</i>
                                <br />
                            </div>

                            date = date.AddDays(1.0);
                        }
                    }
                </div>
            </div>
        </div>
        <div class="col-1"><div class="swiper-button-next" style="background-color:#070720" id="date-next"></div></div>
    </div>
</div>

